<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/pink"
        android:background="#00f4f4f4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/pink"
        android:background="#00f4f4f4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_edititem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_title"
        android:background="@color/backgroundGray"
        android:text="编辑项目"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        />


    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="标题"
        android:paddingLeft="8dp"
        android:lines="1"
        android:textColorHint="@color/textGray"
        android:textColor="@color/textGray"
        app:layout_constraintTop_toBottomOf="@id/tv_edititem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/document_name"
        android:background="@color/backgroundWhite"
        />

    <EditText
        android:id="@+id/document_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        app:layout_constraintBottom_toTopOf="@id/item_state"
        android:drawableLeft="@drawable/document_icon"
        android:background="@color/backgroundWhite"
        android:drawablePadding="60dp"
        android:textColor="@color/textGray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        app:layout_constraintBottom_toTopOf="@id/item_state"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/backgroundWhite"
        />

    <TextView
        android:id="@+id/item_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@id/document_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_priority"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/state_icon"
        android:background="@color/backgroundWhite"
        android:drawablePadding="70dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/document_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_priority"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/backgroundWhite"
        />

    <TextView
        android:id="@+id/item_priority"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_state"
        app:layout_constraintBottom_toTopOf="@id/item_tag"
        android:drawableLeft="@drawable/priority_icon"
        android:drawablePadding="90dp"
        android:background="@color/backgroundWhite"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优先级"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_state"
        app:layout_constraintBottom_toTopOf="@id/item_tag"
        android:layout_marginLeft="45dp"
        android:backgroundTint="@color/backgroundWhite"
        />

    <TextView
        android:id="@+id/item_tag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/item_priority"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_scheduled"
        android:drawableLeft="@drawable/tag_icon"
        android:drawablePadding="70dp"
        android:background="@color/backgroundWhite"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/item_priority"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_scheduled"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="45dp"
        />


    <TextView
        android:id="@+id/item_scheduled"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/agenda"
        app:layout_constraintBottom_toTopOf="@id/item_deadline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tag"
        android:drawablePadding="100dp"
        android:background="@color/backgroundWhite"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录日期"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintBottom_toTopOf="@id/item_deadline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tag"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="45dp"
        />



    <TextView
        android:id="@+id/item_deadline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/item_scheduled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_showtime"
        android:drawableLeft="@drawable/deadline_icon"
        android:drawablePadding="100dp"
        android:background="@color/backgroundWhite"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止日期"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/item_scheduled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_showtime"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="45dp"
        />



    <TextView
        android:id="@+id/item_showtime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/item_deadline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/show_icon"
        android:drawablePadding="100dp"
        android:background="@color/backgroundWhite"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示时间"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/item_deadline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="45dp"
        />
    <TextView
        android:id="@+id/repeat_show_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/item_deadline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="75dp"
        />
    <TextView
        android:id="@+id/repeat_show"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="days"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:background="#00ffffff"
        app:layout_constraintTop_toBottomOf="@id/item_deadline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/item_showtime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="备注"
        android:textSize="18dp"
        android:textColor="@color/textGray"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"/>
    <EditText
        android:id="@+id/item_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_note"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:gravity="top"
        android:background="@color/backgroundWhite"
        android:textColor="@color/textGray"
        />
</androidx.constraintlayout.widget.ConstraintLayout>